---
// Component Imports
import BentoProcess from "../components/BentoProcess.astro";
import Button from "../components/Button.astro";
import ButtonScroll from "../components/ButtonScroll.astro";
import CallToActionCountrys from "../components/CallToActionCountrys.astro";
import Feature from "../components/Feature.astro";
import HeroSeccionIndex from "../components/HeroSeccionIndex.astro";
import Testimonials from "../components/Testimonials.astro";
import TravelsCards from "../components/TravelsCards.astro";
import FormularioContacto from "../components/FormularioContacto.astro";
import Why from "../components/Why.astro";
import Layout from "../layouts/Layout.astro";
export const prerender = true;
---

<Layout
	title="Asesores y Abogados Migratorios Europeo para Inglés"
	url_canonical="https://latamstudyvisa.com/"
	og_title="Estudia inglés mientras trabajas en europa"
	og_descrip="Contamos con expertos abogados migratorios con 100% de las visas aprobadas"
	og_img="/opengraph/openGraph-Estudia-Ingles.jpg"
	og_img_alt="Diferentes destinos para estudiar inglés"
>
	<main class="view">
		<HeroSeccionIndex />

		<div class="blockAnimation">
			<TravelsCards />
		</div>
		<ButtonScroll />
		<div class="blockAnimation">
			<Why />
		</div>

		<BentoProcess />

		<div class="">
			<CallToActionCountrys />
		</div>
		<div class="blockAnimation2 animate-spin">
			<Feature />
		</div>
		<FormularioContacto
			title="¿Quieres Estudiar y trabajar en El extranjero?"
		/>
	</main>
</Layout>

<style>
	@keyframes appear {
		from {
			opacity: 0;
			scale: 0.5;
		}
		to {
			opacity: 1;
			scale: 1;
		}
	}

	@keyframes anim2 {
		from {
			opacity: 0;
			transform: translateY(-200px);
		}
		to {
			opacity: 1;
			transform: translateY(0px);
		}
	}

	.blockAnimation {
		animation: appear linear;
		animation-timeline: view();
		animation-range: entry 0% cover 40%;
	}

	.blockAnimation2 {
		animation: anim2 linear;
		animation-timeline: view();
		animation-range: entry 0% cover 30%;
	}
</style>
